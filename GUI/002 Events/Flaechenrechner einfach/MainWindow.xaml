<Window x:Class="Flaechenrechner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Flaechenrechner"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="300" WindowStartupLocation="CenterScreen" Background="LightGray">
    <Grid>
        <Label Content="Länge" HorizontalAlignment="Left" Margin="10,14,0,0" VerticalAlignment="Top" FontSize="20"/>
        <Label Content="Breite" HorizontalAlignment="Left" Margin="10,51,0,0" VerticalAlignment="Top" FontSize="20"/>
        <TextBox x:Name="tbLaenge" HorizontalAlignment="Left" Margin="80,23,0,0" TextWrapping="Wrap" Text="5,7" VerticalAlignment="Top" VerticalContentAlignment="Center" HorizontalContentAlignment="Right" Width="185" Height="30" FontSize="20"/>
        <TextBox x:Name="tbBreite" HorizontalAlignment="Left" Margin="80,54,0,0" TextWrapping="Wrap" Text="3,8" VerticalAlignment="Top" VerticalContentAlignment="Center" HorizontalContentAlignment="Right" Width="185" Height="30" FontSize="20"/>
        <Button x:Name="btBerechne" Content="Fläche berechnen" HorizontalAlignment="Left" Height="45" Margin="10,0,0,0" VerticalAlignment="Center" Width="255" Background="gray" FontSize="20" FontWeight="Bold" Click="btBerechne_Click"/>
        <Label x:Name="lbAusgabe" Content="Die Fläche beträgt ..." HorizontalAlignment="Left" Margin="12,145,0,0" VerticalAlignment="Top" FontSize="20" Width="253"/>

    </Grid>
</Window>
